<main role="main">

<form action="/busca" method="GET">
<input id="search" type="text" placeholder="O que você procura?">
<input id="submit" type="submit" value="Buscar!">



{% for produto in produtos %}

<h3>{{ produto.nome }}</h3>
<img src="/images/{{ produto.imagem }}" width="300">
<br />
{{ produto.descricao }}
<br /><br />

R$ {{ produto.preco }}
<br />
<a href="/produto/{{ produto.id }}">Ver Detalhes</a>

{% endfor %}



</main>

